extends layout/base 
block content
    .container
        section#ccr-left-section.col-md-8
            .current-page
                a(href='/')
                    i.fa.fa-home
                    i.fa.fa-angle-double-right
                |  Contact
            // / .current-page
            section#ccr-contact-form
                p Contact Us
                    form#commentform(action='#', method='post')
                    input#author(name='author', type='text', placeholder='Name', value='', required='')
                    input#email(name='email', type='email', placeholder='Email', value='', required='')
                    input#url(name='url', type='url', placeholder='Website', value='')
                    textarea#comment(name='comment', placeholder='Message', rows='8', required='')
                    input#submit(name='submit', type='submit', value='Submit')
                // /#commentform
            // /#ccr-contact-form
        // /.col-md-8 / #ccr-left-section
        section#ccr-right-section.col-md-4
            section#ccr-contact-sidebar
                p
                    span Contact
                        address
                            p
                                | Address: 292 Inner Circuler Road
                            p
                                | Motijheel, Dhaka
                            p
                                | Phone:+880 - 11223344
                            p
                                | Email: contact@yoursite.com
                            p
                span Social Updates
                    ul
                        li
                            a.google-plus(href='#')
                                i.fa.fa-google-plus
                        li
                            a.facebook(href='#')
                                i.fa.fa-facebook
                        li
                            a.twitter(href='#')
                                i.fa.fa-twitter
                        li
                            a.linkedin(href='#')
                                i.fa.fa-linkedin
            // /#ccr-contact-sidebar
        // / .col-md-4  / #ccr-right-section
    iframe(width='100%', height='500', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src='https://maps.google.com.bd/maps?q=dhaka+on+google+map&ie=UTF8&hq=&gl=bd&ll=23.709921,90.407143&spn=0.734303,1.352692&t=m&z=10&iwloc=A&output=embed')