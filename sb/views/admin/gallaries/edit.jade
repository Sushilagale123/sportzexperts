extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Gallery Item
			small sport for editing sport data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Gallery
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/gallaries/edit/#{(id==undefined) ? data.id : id}')
					.row		
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Item Title
									input(type='text',value="#{data.title}",name='title',placeholder='Enter Item Title', autofocus).form-control
								.form-group
									label
										| Select Media
									input(type='file',value="#{ (path == undefined) ? data.path : path }",name='path').form-control
								.form-group
									label
										| Type
									input(type='text',value="#{ (type == undefined) ? data.type : type }",name='type',placeholder='Enter Type').form-control
								.form-group
									label
										| Event
									input(type='text',value="#{ (event_id == undefined) ? data.event_id : event_id }",name='event_id',placeholder='Enter Event Id').form-control
								.form-group
									label
										| Type
									input(type='text',value="#{ (user_id == undefined) ? data.user_id : user_id }",name='user_id',placeholder='Enter User Id').form-control
								
								.form-group
									label
										| Status
									input(type='text',value="#{ (status == undefined) ? data.status : status }",name='status',placeholder='Status').form-control
										
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/gallaries').btn.btn-primary.pull-right
									| Back