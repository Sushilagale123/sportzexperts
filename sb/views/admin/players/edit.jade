extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Sport
			small sport for editing sport data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Sport
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/sports/edit/#{(id==undefined) ? data.id : id}')
					.row		
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Sport Name
									input(type='text',value="#{data.name}",name='name',placeholder='Enter Sport Name', autofocus).form-control
								.form-group
									label
										| Sport Category
									input(type='text',value="#{ (sport_cat == undefined) ? data.sport_cat : sport_cat }",name='sport_cat',placeholder='Enter Sport Cat').form-control
								.form-group
									label
										| Description
									input(type='text',value="#{ (description == undefined) ? data.description : description }",name='description',placeholder='Enter Description').form-control
								.form-group
									label
										| Status
									input(type='text',value="#{ (status == undefined) ? data.status : status }",name='status',placeholder='Enter Iso Numeric').form-control
										
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/sports').btn.btn-primary.pull-right
									| Back