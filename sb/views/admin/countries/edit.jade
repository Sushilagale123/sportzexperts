extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Country
			small menu for editing country data
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Country
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/countries/edit/#{(id==undefined) ? data.id : id}')
					.row		
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								- if (messages.msg_info) 
									.alert.alert-success.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| ×
										h4
											i.icon.fa.fa-ban
											| Success! 
										| !{messages.msg_info}
								.form-group
									label
										| Name
									input(type='text',value="#{data.country}",name='country',placeholder='Enter Country Name', autofocus).form-control
								.form-group
									label
										| Iso Alpha2
									input(type='text',value="#{ (iso_alpha2 == undefined) ? data.iso_alpha2 : iso_alpha2 }",name='iso_alpha2',placeholder='Enter Iso Alpha2').form-control
								.form-group
									label
										| Ios Alpha3
									input(type='text',value="#{ (iso_alpha3 == undefined) ? data.iso_alpha3 : iso_alpha3 }",name='iso_alpha3',placeholder='Enter Iso Alpha3').form-control
								.form-group
									label
										| Iso Numeric
									input(type='text',value="#{ (iso_numeric == undefined) ? data.iso_numeric : iso_numeric }",name='iso_numeric',placeholder='Enter Iso Numeric').form-control
								.form-group
									label
										| Currency Code
									input(type='text',value="#{ (currency_code == undefined) ? data.currency_code : currency_code }",name='currency_code',placeholder='Enter Currency Code').form-control
								.form-group
									label
										| Currency Name 
									input(type='text',value="#{ (currency_name == undefined) ? data.currency_name : currency_name }",name='currency_name',placeholder='Enter Currency Name').form-control
								.form-group
									label
										| Currency Symbol
									input(type='text',value="#{ (currency_symbol == undefined) ? data.currency_symbol : currency_symbol }",name='currency_symbol',placeholder='Enter Currency Symbol').form-control
								.form-group
									label
										| Flag
									input(type='text',value="#{ (flag == undefined) ? data.flag : flag }",name='flag',placeholder='Enter Flag').form-control
								.form-group
									label
										| Status
									input(type='text',value="#{ (status == undefined) ? data.status : status }",name='status',placeholder='Enter Iso Numeric').form-control
										
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil 
									|  Edit
								a(href='/countries').btn.btn-primary.pull-right
									| Back